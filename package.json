{
  "name": "targetprocess-pm-tool",
  "version": "1.0.0",
  "description": "Targetprocess PM tool for BuildBoard",
  "main": "src/index.js",
  "scripts": {
    "start": "pm2 start src/index.js --name=\"tp\" --node-args=\"--harmony_destructuring\"",
    "dev": "pm2 --watch --no-daemon start src/index.js --name=\"tp\" --node-args=\"--harmony_destructuring\"",
    "jscs": "jscs ./ --config=./.jscsrc --reporter=console",
    "jscsfix": "jscs ./ --config=./.jscsrc --reporter=console --fix",
    "test": "npm run jscs && mocha --harmony_destructuring test/**/*.js"
  },
  "author": "Taucraft",
  "license": "ISC",
  "dependencies": {
    "buildboard-tool-bootstrap": "https://github.com/buildboard/buildboard-tool-bootstrap.git",
    "koa-request": "^1.0.0",
    "lodash": "^3.10.1",
    "thunkify-wrap": "^1.0.4"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "mocha": "^2.3.4",
    "pm2": "^0.15.10",
    "jscs": "^2.7.0"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buildboard/tool-tp.git"
  },
  "bugs": {
    "url": "https://github.com/buildboard/tool-tp/issues"
  },
  "homepage": "https://github.com/buildboard/tool-tp#readme"
}
